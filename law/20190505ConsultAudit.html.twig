    <script src="{{ asset('public/pintuer2/js/zhree/js/jquery-1.10.2.min.js') }}" type="text/javascript" charset="utf-8"></script>
    <script src="{{ asset('public/pintuer2/js/zhree/js/jquery.ztree.all.js') }}" type="text/javascript" charset="utf-8"></script>
	<script src="{{ asset('public/layer/layer.js') }}"></script>
	<script type="text/javascript" src="{{ asset(theme('js/jquery.PrintArea.js')) }}"></script>
	<script type="text/javascript">
		$("#btnPrint").click(function() {
			$("#printArea").printArea();
